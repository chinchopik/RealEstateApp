@using RealEstateApp.Models.RealEstateList;
@model EditViewModel
@{
    Layout = "~/Views/EditRealEstate/_RealEstateLayout.cshtml";
    ViewData["Title"] = "RealEstateEmpty";
}


<div class="shadow rounded p-3 mt-5 bg-white">
    <form asp-controller="EditRealEstate" asp-action="Create">
        <div class="row">
            <div class="col-6">
                <div class="form-floating">
                    <input asp-for="RealEstate.Address"
                    type="text"
                    class="form-control shadow-sm rounded"
                    placeholder="Адрес объекта">
                    <label asp-for="RealEstate.Address">Адрес объекта</label>
                </div>
                <span asp-validation-for="RealEstate.Address" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>
            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="RealEstate.Price"
                    type="number"
                    min="1"
                    step="any"
                    class="form-control shadow-sm rounded"
                    placeholder="Цена объекта">
                    <label asp-for="RealEstate.Price">Цена объекта</label>
                </div>
                <span asp-validation-for="RealEstate.Price" class="text-danger"></span>
            </div>
            <div class="col-1 d-flex">
                <button class="btn btn-success d-flex shadows rounded"
                        type="submit"
                        style="text-align:center; margin:auto;"                        
                        data-bs-title="Добавить"
                        data-bs-toggle="tooltip">Добавить                        
                </button>
            </div>
        </div>
        <div class="row">
            <div id="areaDiv" class="areaDiv col-2">
                <div class="form-floating">
                    <input asp-for="RealEstate.TotalArea"
                           type="number" id="totalAreaInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Адрес объекта">
                    <label asp-for="RealEstate.TotalArea">Площадь</label>
                </div>
                <span asp-validation-for="RealEstate.TotalArea" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>             
            <div id="floorsDiv" class="col-3">
                <div class="form-floating">
                    <input asp-for="RealEstate.TotalFloors"
                           type="number" id="totalFloorsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="RealEstate.TotalFloors">Количество этажей</label>
                </div>
                <span asp-validation-for="RealEstate.TotalFloors" class="text-danger"></span>
            </div>
             
            <div id="roomsDiv" class="roomsDiv col-3">
                <div class="form-floating">
                    <input asp-for="RealEstate.NumberOfRooms"
                           type="number" id="totalRoomsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="RealEstate.NumberOfRooms">Количество комнат</label>
                </div>
                <span asp-validation-for="RealEstate.NumberOfRooms" class="text-danger"></span>
            </div>
        </div>
        <div class="row"></div>
        <div class="d-flex flex-row justify-content-start">
            <div id="roomsDiv" class="roomsDiv">
                <div class="form-floating">
                    <button type="button" class="btn btn-primary edit" data-bs-toggle="modal" data-bs-target="#ModalMap" data-bs-placement="top" title="Редактировать">
                        Расположение
                    </button>
                </div>
                <span asp-validation-for="RealEstate.NumberOfRooms" class="text-danger"></span>
                <input id="latitudeInput" type="hidden" asp-for="RealEstate.Latitude"/>
                <input id="longitudeInput" type="hidden" asp-for="RealEstate.Longitude" />
                <input id="photoInput" type="hidden" asp-for="RealEstate.Photo" />
            </div>
            <div class="col-1">
            </div>
            <div id="roomsDiv" class="roomsDiv">
                <div class="form-floating">
                    <input class="btn btn-success d-flex shadows rounded"
                            style="text-align:center; margin:auto;" type="file"
                           data-bs-title="Выбрать фото" onchange="previewFile()"
                            data-bs-toggle="tooltip">
                    </input>   
                </div>
                <span asp-validation-for="RealEstate.NumberOfRooms" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
<hr/>
<h1>Поиск</h1>
<div class="shadow rounded p-3 bg-white">
    <div class="d-flex flex-row justify-content-between">
        <form asp-controller="EditRealEstate"  asp-action="Index">
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row justify-content-between">
                    <div>
                        <div class="form-floating">
                            <input name="searchString"
                                   asp-for="RealEstate.Address"
                                   type="text"
                                   class="form-control shadow-sm rounded"
                                   placeholder="Адрес объекта">
                            <label asp-for="RealEstate.Address">Адрес объекта</label>
                        </div>
                        <div class="text-danger">@ViewBag.Error</div>
                    </div>
                    <div class="col-1 d-flex">
                        <button class="btn btn-secondary shadows rounded" type="submit" data-bs-title="Добавить"
                                data-bs-toggle="tooltip">Поиск
                        </button>
                    </div>
                </div>                
            </div>
        </form>
        <form asp-controller="EditRealEstate" asp-action="Index">
            <div class="d-flex flex-row">
                <button class="btn d-flex btn-secondary shadows rounded" id="buttonReset" type="submit" data-bs-title="Добавить"
                        data-bs-toggle="tooltip">
                    Сбросить
                </button>
            </div>
        </form>
        </div>
</div>

<hr/>

<div class="estate align-items-center p-3 mt-3 rounded d-flex flex-row justify-content-start border-bottom">
    <div class="d-flex col">
        <label class="form-label">Идентификатор</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Адрес объекта</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Цена объекта</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Площадь</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Кол-во комнат</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Этаж</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Фото</label>
    </div>
    <div class="null-column d-flex col">
    </div>
    <div class="d-flex col">
        <label class="form-label">Действие</label>
    </div>
 </div>
<div class="estates">
    @foreach (var estate in Model.RealEstates)
    {        
        @await Component.InvokeAsync("RealEstate", estate);
    }
</div>


<!-- Модальное окно расположения -->
<div class="modal fade" id="ModalMap" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <form asp-controller="EditRealEstate" asp-action="Update">
        <div class="modal-dialog d-flex justify-content-center">
            <div class="modal-content m-5 d-flex">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Редактирование данных клиента</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div id="modalbodymap" class="modal-body">
                    <div class="container-fluid">
                        <div id="map" style="width: 400px; height: 500px"></div>
                        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
                        <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary p-2" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-vk5WoKIaW/vJyUAd9n/wmopsmNhiy+L2Z+SBxGYnUkunIxVxAv/UtMOhba/xskxh" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/components/realEstateItem/Default.js"></script>
    <script src="~/js/editrealestate/Default.js"></script>
}

