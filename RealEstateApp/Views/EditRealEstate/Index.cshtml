@using RealEstateApp.Models.RealEstateList;
@model EditViewModel
@{
    Layout = "~/Views/EditRealEstate/_RealEstateLayout.cshtml";
    ViewData["Title"] = "RealEstateEmpty";
}


<div class="shadow rounded p-3 mt-5 bg-white">
    <form asp-controller="EditRealEstate" asp-action="Create">
        <div class="row">
            <div class="col-6">
                <div class="form-floating">
                    <input asp-for="RealEstate.Address"
                    type="text"
                    class="form-control shadow-sm rounded"
                    placeholder="Адрес объекта">
                    <label asp-for="RealEstate.Address">Адрес объекта</label>
                </div>
                <span asp-validation-for="RealEstate.Address" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>

            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="RealEstate.Price"
                    type="number"
                    min="1"
                    step="any"
                    class="form-control shadow-sm rounded"
                    placeholder="Цена объекта">
                    <label asp-for="RealEstate.Price">Цена объекта</label>
                </div>
                <span asp-validation-for="RealEstate.Price" class="text-danger"></span>
            </div>

            <div class="col-1 d-flex">
                <button class="btn btn-success d-flex shadows rounded"
                        type="submit"
                        style="text-align:center; margin:auto;"                        
                        data-bs-title="Добавить"
                        data-bs-toggle="tooltip">Добавить                        
                </button>
            </div>
        </div>
        <div class="row">
            <div id="areaDiv" class="areaDiv col-2">
                <div class="form-floating">
                    <input asp-for="RealEstate.TotalArea"
                           type="number" id="totalAreaInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Адрес объекта">
                    <label asp-for="RealEstate.TotalArea">Площадь</label>
                </div>
                <span asp-validation-for="RealEstate.TotalArea" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>
             
            <div id="floorsDiv" class="col-3">
                <div class="form-floating">
                    <input asp-for="RealEstate.TotalFloors"
                           type="number" id="totalFloorsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="RealEstate.TotalFloors">Количество этажей</label>
                </div>
                <span asp-validation-for="RealEstate.TotalFloors" class="text-danger"></span>
            </div>
             
            <div id="roomsDiv" class="roomsDiv col-3">
                <div class="form-floating">
                    <input asp-for="RealEstate.NumberOfRooms"
                           type="number" id="totalRoomsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="RealEstate.NumberOfRooms">Количество комнат</label>
                </div>
                <span asp-validation-for="RealEstate.NumberOfRooms" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
<hr/>
<h1>Поиск</h1>
<div class="shadow rounded p-3 bg-white">
    <div class="d-flex flex-row justify-content-between">
        <form asp-controller="EditRealEstate"  asp-action="Index">
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row justify-content-between">
                    <div>
                        <div class="form-floating">
                            <input name="searchString"
                                   asp-for="RealEstate.Address"
                                   type="text"
                                   class="form-control shadow-sm rounded"
                                   placeholder="Адрес объекта">
                            <label asp-for="RealEstate.Address">Адрес объекта</label>
                        </div>
                        <span asp-validation-for="RealEstate.Address" class="text-danger"></span>
                        <div class="text-danger">@ViewBag.Error</div>
                    </div>
                    <div class="col-1 d-flex">
                        <button class="btn btn-secondary shadows rounded" type="submit" data-bs-title="Добавить"
                                data-bs-toggle="tooltip">Поиск
                        </button>
                    </div>
                </div>                
            </div>
        </form>
        <form asp-controller="EditRealEstate" asp-action="Index">
            <div class="d-flex flex-row">
                <button class="btn d-flex btn-secondary shadows rounded" id="buttonReset" type="submit" data-bs-title="Добавить"
                        data-bs-toggle="tooltip">
                    Сбросить
                </button>
            </div>
        </form>
        </div>
</div>

<hr/>

<div class="estate align-items-center p-3 mt-3 rounded d-flex flex-row justify-content-start border-bottom">
    <div class="d-flex col">
        <label class="form-label">Идентификатор</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Адрес объекта</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Цена объекта</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Площадь</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Кол-во комнат</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Этаж</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Действие</label>
    </div>
 </div>
<div class="estates">
    @foreach (var estate in Model.RealEstates)
    {        
        @await Component.InvokeAsync("RealEstate", estate);
    }
</div>


