@using RealEstateApp.Models.DealList;
@model DealViewModel
@{
    Layout = "~/Views/EditRealEstate/_RealEstateLayout.cshtml";
}

<h1>Поиск</h1>
<div class="shadow rounded p-3 bg-white">
    <div class="d-flex flex-row justify-content-between">
        <form asp-controller="Deal" asp-action="Deal">
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row justify-content-between">
                    <div>
                        <div class="form-floating">
                            <input name="searchString"
                                   type="text"
                                   class="form-control shadow-sm rounded"
                                   placeholder="Поиск">
                            <label asp-for="RealEstate">Поиск</label>
                        </div>
                        <span asp-validation-for="RealEstate" class="text-danger"></span>
                        <div class="text-danger">@ViewBag.Error</div>
                    </div>
                    <div class="col-1 d-flex">
                        <button class="btn btn-secondary shadows rounded" type="submit" data-bs-title="Добавить"
                                data-bs-toggle="tooltip">
                            Поиск
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <form asp-controller="Deal" asp-action="Deal">
            <div class="d-flex flex-row">
                <button class="btn d-flex btn-secondary shadows rounded" id="buttonReset" type="submit" data-bs-title="Добавить"
                        data-bs-toggle="tooltip">
                    Сбросить
                </button>
            </div>
        </form>
    </div>
</div>

<hr />

<div class="estate align-items-center p-3 mt-3 rounded d-flex flex-row justify-content-start border-bottom">
    <div class="d-flex col">
        <label class="form-label">Идентификатор</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Объект недвижимости</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Клиент</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Агент</label>
    </div>
    <div class="d-flex col">
        <label class="form-label">Дата сделки</label>
    </div>
</div>

<div class="estates">
    @foreach (var deal in Model.Deals)
    {
        @await Component.InvokeAsync("Deal", deal)
        ;
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-vk5WoKIaW/vJyUAd9n/wmopsmNhiy+L2Z+SBxGYnUkunIxVxAv/UtMOhba/xskxh" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/components/clientItem/Default.js"></script>
}

<style>
    .row {
        margin-top: 10px;
    }
</style>