@using RealEstateApp.Models.ClientList;
@model ClientViewModel
@{
    Layout = "~/Views/EditRealEstate/_RealEstateLayout.cshtml";
    ViewData["Title"] = "RealEstateEmpty";
}

<div class="shadow rounded p-3 mt-5 bg-white">
    <form asp-action="Create">
        <div class="row">
            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="LastName"
                           type="text"
                           class="form-control shadow-sm rounded"
                           placeholder="Фамилия">
                    <label asp-for="LastName">Фамилия</label>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>

            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="FirstName"
                           type="text"
                           class="form-control shadow-sm rounded"
                           placeholder="Имя">
                    <label asp-for="FirstName">Имя</label>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="Patronymic"
                           type="text"
                           class="form-control shadow-sm rounded"
                           placeholder="Отчество">
                    <label asp-for="Patronymic">Отчество</label>
                </div>
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>

        </div>
        <div class="row">
            <div id="areaDiv" class="areaDiv col-4">
                <div class="form-floating">
                    <input asp-for="Email"
                           type="text" id="totalAreaInput"
                           class="form-control shadow-sm rounded"
                           placeholder="Электронная почта">
                    <label asp-for="Email">Электронная почта</label>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>

            <div id="floorsDiv" class="col-3">
                <div class="form-floating">
                    <input asp-for="Phone"
                           type="text" id="totalFloorsInput"
                           class="form-control shadow-sm rounded"
                           placeholder="Номер телефона">
                    <label asp-for="Phone">Номер телефона</label>
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-1 d-flex">
                <button class="btn btn-success d-flex shadows rounded"
                        type="submit"
                        style="text-align:center; margin:auto;"
                        data-bs-title="Добавить"
                        data-bs-toggle="tooltip">
                    Добавить
                </button>
            </div>
        </div>
    </form>
</div>
<hr />
<h1>Поиск</h1>
<div class="shadow rounded p-3 bg-white">
    <div class="d-flex flex-row justify-content-between">
        <form asp-controller="Client" asp-action="Client">
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row justify-content-between">
                    <div>
                        <div class="form-floating">
                            <input name="searchString"
                                   asp-for="LastName"
                                   type="text"
                                   class="form-control shadow-sm rounded"
                                   placeholder="Адрес объекта">
                            <label asp-for="LastName">Поиск</label>
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <div class="text-danger">@ViewBag.Error</div>
                    </div>
                    <div class="col-1 d-flex">
                        <button class="btn btn-secondary shadows rounded" type="submit" data-bs-title="Добавить"
                                data-bs-toggle="tooltip">
                            Поиск
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <form asp-controller="Client" asp-action="Client">
            <div class="d-flex flex-row">
                <button class="btn d-flex btn-secondary shadows rounded" id="buttonReset" type="submit" data-bs-title="Добавить"
                        data-bs-toggle="tooltip">
                    Сбросить
                </button>
            </div>
        </form>
    </div>
</div>

<hr />

<div class="estate align-items-center p-3 mt-3 rounded d-flex flex-row justify-content-between border-bottom">
    <div class="d-flex align-items-center">
        <label class="form-label">Идентификатор</label>
    </div>
    <div>
        <label class="form-label">Фамилия</label>
    </div>
    <div>
        <label class="form-label">Имя</label>
    </div>
    <div>
        <label class="form-label">Отчество</label>
    </div>
    <div>
        <label class="form-label">Номер телефона</label>
    </div>
    <div>
        <label class="form-label">Электронная почта</label>
    </div>
    <div>
        <label class="form-label">Действие</label>
    </div>
</div>
<div class="estates">
    @foreach (var client in Model.Clients)
    {
        @await Component.InvokeAsync("Client", client);
    }
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-vk5WoKIaW/vJyUAd9n/wmopsmNhiy+L2Z+SBxGYnUkunIxVxAv/UtMOhba/xskxh" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/components/clientItem/Default.js"></script>
}

<style>
    .row {
        margin-top: 10px;
    }
</style>