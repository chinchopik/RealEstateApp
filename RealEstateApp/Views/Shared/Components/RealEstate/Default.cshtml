@using RealEstateApp.Domain.Entities;
@model RealEstate
@{

}

<div class="estate align-items-center p-3 mt-3 rounded d-flex flex-row justify-content-start border border-success" data-id="@Model.Id">
	<div class="d-flex col">
		<label class="form-label" asp-for="Id">@Model.Id</label>
	</div>
	<div class="d-flex col">
		<label class="form-label text-break" asp-for="Address">@Model.Address</label>
	</div>
	<div class="d-flex col">
		<label class="form-label" asp-for="Price">@Model.Price</label>
	</div>
	<div class="d-flex col">
		<label class="form-label" asp-for="TotalArea">@Model.TotalArea</label>
	</div>
	<div class="d-flex col">
		<label class="form-label" asp-for="TotalFloors">@Model.TotalFloors</label>
	</div>
	<div class="d-flex col">
		<label class="form-label" asp-for="NumberOfRooms">@Model.NumberOfRooms</label>
	</div>
	<div class="crop d-flex col ">
		<img src="@Model.Photo"/>
	</div>
	<div class="null-column d-flex col">
	</div>
	<div class="col">
		<button type="button" class="btn btn-success edit" data-bs-toggle="modal" data-bs-target="#exampleModalEdit" id="@Model.Id" data-bs-placement="top" title="Редактировать">Редактировать
			</button>
		<button type="button" class="btn btn-primary edit" data-bs-toggle="modal" data-bs-target="#exampleModalMap" id="@Model.Id" data-bs-placement="top" title="Редактировать">
			Расположение
		</button>
		<form asp-controller="RealEstate" asp-action="Delete">
			@Html.HiddenFor(m=>m.Id)
			<button type="submit" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Удалить">Удалить
			</button>
		</form>
	</div>
</div>

<!-- Модальное окно редактирования -->
<div class="modal fade" id="exampleModalEdit" aria-labelledby="exampleModalLabel" aria-hidden="true" data-id="@Model.Id">
	<form asp-controller="RealEstate" asp-action="Update">
		<div class="modal-dialog d-flex justify-content-center">
			<div class="modal-content m-5 d-flex">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Заголовок модального окна</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
				</div>
				<div class="modal-body">
					<div class="form-floating disabled mb-3">
						<input type="text" asp-for="Id"
							   class="form-control shadow-sm rounded"
							   placeholder="Идентификатор объекта"
							   id="IdEstate" readonly>
						<label asp-for="Id">Идентификатор объекта</label>
					</div>
					<div class="form-floating mb-3">
						<input type="text" asp-for="Address"
							   class="form-control shadow-sm rounded"
							   placeholder="Адрес объекта"
							   id="AddressInput">
						<label asp-for="Address">Адрес объекта</label>
					</div>
					<span asp-validation-for="Address" class="text-danger"></span>
					<div class="text-danger">@ViewBag.Error</div>
					<div class="form-floating mb-3">
						<input asp-for="Price"
							   type="number"
							   min="1"
							   step="any"
							   class="form-control shadow-sm rounded"
							   placeholder="Цена объекта"
							   id="PriceInput">
						<label asp-for="Price">Цена объекта</label>
					</div>
					<span asp-validation-for="Price" class="text-danger"></span>
					<div class="form-floating mb-3">
						<input type="number" asp-for="TotalArea"
							   class="form-control shadow-sm rounded"
							   min="1"
							   step="any"
							   placeholder="Площадь объекта"
							   id="AreaInput">
						<label asp-for="TotalArea">Площадь объекта</label>
					</div>
					<span asp-validation-for="TotalArea" class="text-danger"></span>
					<div class="form-floating mb-3">
						<input type="number" asp-for="TotalFloors"
							   class="form-control shadow-sm rounded"
							   min="1"
							   step="any"
							   placeholder="Кол-во этажей"
							   id="FloorsInput">
						<label asp-for="TotalFloors">Кол-во этажей</label>
					</div>
					<span asp-validation-for="TotalFloors" class="text-danger"></span>
					<div class="form-floating mb-3">
						<input type="number" asp-for="NumberOfRooms"
							   class="form-control shadow-sm rounded"
							   min="1"
							   step="any"
							   placeholder="Кол-во комнат"
							   id="RoomsInput">
						<label asp-for="NumberOfRooms">Кол-во комнат</label>
					</div>
					<span asp-validation-for="NumberOfRooms" class="text-danger"></span>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary p-2" data-bs-dismiss="modal">Закрыть</button>
					<button type="sumbit" class="btn btn-success">Сохранить изменения</button>
				</div>
			</div>
		</div>
		</form>
</div>

<!-- Модальное окно расположения -->
<div class="modal fade" id="exampleModalMap" aria-labelledby="exampleModalLabel" aria-hidden="true" data-id="@Model.Id">
	<form asp-controller="RealEstate" asp-action="Update">
		<div class="modal-dialog d-flex justify-content-center">
			<div class="modal-content m-5 d-flex">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Заголовок модального окна</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
				</div>
				<div class="modal-body">
					<div class="container-fluid">
						<div id="mapDiv" style="width: 400px; height: 500px"></div>
						<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
						<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary p-2" data-bs-dismiss="modal">Закрыть</button>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-vk5WoKIaW/vJyUAd9n/wmopsmNhiy+L2Z+SBxGYnUkunIxVxAv/UtMOhba/xskxh" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
}

<style>

	.crop {
		width: 500px;
		max-height: 500px;
		overflow: hidden;
	}

		.crop img {
			max-width: 200px;
			height: 100px;
		}

	.null-column {
		max-width: 50px;
	}

</style>





