@using RealEstateApp.Models.RealEstateList;
@model RealEstateViewModel
@{
    ViewData["Title"] = "RealEstateEmpty";
}

<div class="shadow rounded p-3 mt-5 bg-white">
    <form asp-action="Create">
        <div class="row">
            <div class="col-6">
                <select id="drop">
                    <option value="1">Квартира</option>
                    <option value="2">Земельный участок</option>
                    <option value="3">Дом</option>
                </select>                
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-floating">
                    <input asp-for="Address"
                    type="text"
                    class="form-control shadow-sm rounded"
                    placeholder="Адрес объекта">
                    <label asp-for="Address">Адрес объекта</label>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>

            <div class="col-4">
                <div class="form-floating">
                    <input asp-for="Price"
                    type="number"
                    min="1"
                    step="any"
                    class="form-control shadow-sm rounded"
                    placeholder="Цена объекта">
                    <label asp-for="Price">Цена объекта</label>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-1 d-flex">
                <button class="btn btn-success d-flex shadows rounded"
                        type="submit"
                        style="text-align:center; margin:auto;"                        
                        data-bs-title="Добавить"
                        data-bs-toggle="tooltip">Добавить                        
                </button>
            </div>
        </div>
        <div class="row">
            <div id="areaDiv" class="areaDiv col-2">
                <div class="form-floating">
                    <input asp-for="TotalArea" 
                           type="number" id="totalAreaInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Адрес объекта">
                    <label asp-for="TotalArea">Площадь</label>
                </div>
                <span asp-validation-for="TotalArea" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Error</div>
            </div>

            <div id="floorsDiv" class="col-3">
                <div class="form-floating">
                    <input asp-for="TotalFloors" 
                           type="number" id="totalFloorsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="TotalFloors">Количество этажей</label>
                </div>
                <span asp-validation-for="TotalFloors" class="text-danger"></span>
            </div>
             
            <div id="roomsDiv" class="roomsDiv col-3">
                <div class="form-floating">
                    <input asp-for="NumbersOfRooms" 
                           type="number" id="totalRoomsInput"
                           min="1"
                           step="any"
                           class="form-control shadow-sm rounded"
                           placeholder="Цена объекта">
                    <label asp-for="NumbersOfRooms">Количество комнат</label>
                </div>
                <span asp-validation-for="NumbersOfRooms" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
<hr/>
<h1>Поиск</h1>
<div class="shadow rounded p-3 bg-white">
    <div>
        <form asp-controller="RealEstate"  asp-action="Index">
            <div class="row">
                <div class="col-4">
                    <div class="form-floating">
                        <input name="searchString"
                               asp-for="Address"
                               type="text"
                               class="form-control shadow-sm rounded"
                               placeholder="Адрес объекта">
                        <label asp-for="Address">Адрес объекта</label>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <div class="text-danger">@ViewBag.Error</div>
                </div>
                <div class="dropdown col-2 d-flex">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="estateTypeDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Тип объекта
                    </button>
                    <div class="dropdown-menu" aria-labelledby="estateTypeDropdown">
                        <a class="dropdown-item" href="#apartment">Квартира</a>
                        <a class="dropdown-item" href="#land">Земельный участок</a>
                        <a class="dropdown-item" href="#house">Дом</a>
                    </div>
                </div>
                <div class="col-1 d-flex">
                    <button class="btn btn-secondary shadows rounded" type="submit" data-bs-title="Добавить"
                            data-bs-toggle="tooltip">Поиск
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<hr/>

<div class="estate align-items-center p-3 mt-3 rounded d-flex justify-content-start border-bottom" data-id="@Model.Id">
    <div class="d-flex align-items-center col-2">
        <label class="form-label">Идентификатор</label>
    </div>
    <div class="col-5">
        <label class="form-label">Адрес объекта</label>
    </div>
    <div class="col-4">
        <label class="form-label">Цена объекта</label>
    </div>
 </div>
<div class="estates">
    @foreach (var estate in Model.RealEstates)
    {
        @await Component.InvokeAsync("RealEstate", estate);
        
    }
</div>


